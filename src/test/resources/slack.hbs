{
    "channel": "#random",
    "blocks": [
    {{#each blocks}}
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": {{json text}}
            }
        },
        {
            "type": "section",
            "fields": [
                {{#each fields}}
                {
                    "type": "mrkdwn",
                    "text": {{json this}}
                }
                {{#unless @last}},{{/unless}}
                {{/each}}
            ]
        },
        {
        "type": "divider"
        }
        {{#unless @last}},{{/unless}}
    {{/each}}
    ]
}